{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ssot/tokens": ["packages/tokens/src/index"]
    }
  },
  "include": ["scripts", "packages", "tailwind.plugins", "tailwind.config.ts"]
}

