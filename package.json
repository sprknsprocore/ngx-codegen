{
  "name": "ngx-codegen-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build:tokens": "ts-node --transpile-only scripts/build-tokens.ts",
    "check:tokens": "ts-node --transpile-only scripts/check-tokens.ts",
    "build:icons": "ts-node --transpile-only scripts/build-icons.ts",
    "build:docs": "ts-node --transpile-only scripts/build-docs.ts",
    "prebuild": "npm run build:tokens",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:scan": "ts-node --transpile-only scripts/scan-built-for-raw-values.ts",
    "ci": "npm run build:tokens && npm run build:icons && npm run build:docs && npm run lint && npm run typecheck && npm run test:scan",
    "sync:figma-tokens": "ts-node --transpile-only scripts/sync-figma-tokens.ts",
    "sync:figma-component": "ts-node --transpile-only scripts/sync-figma-component.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy-storybook": "npm run build-storybook && gh-pages -d storybook-static"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@types/node": "^24.10.1",
    "gh-pages": "^6.3.0",
    "storybook": "^8.6.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^6.0.0"
  }
}
